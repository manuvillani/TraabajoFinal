<div class="container form-registerRrs" style="margin:150px auto">
    <div class="row">
        <div class="col-6 offset-3 text-white">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/Modificar"method="post">
             <input type="hidden" value='{{novedad.id}}' name="id">
                <div class="form-group">
                    <label for=''>Titulo</label>
                    <input type="text" class="form-control" style="margin-bottom: 10px;" name="Titulo" value='{{novedad.Titulo}}'>
                      </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" style="margin-bottom: 10px;" name="Subtitulo"
                    value= "{{novedad.subtitulo}}" >
                </div>
                <div class="form-group">
                <label for="">Cuerpo</label>
                <textarea name="Cuerpo" class="form-control"style="margin-bottom: 10px;">{{novedad.Cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary3 text-white">Modificar</button>
            </form>
             {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>

